<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.allshare_back4app.Fragments.UserProfile">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/userName"
            android:textSize="50sp"
            android:textColor="#FFF"
            android:fontFamily="serif"

            android:text="Default Value"
            android:gravity ="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/emailId_textView"
            android:text="Default Value"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="serif"
            android:layout_alignTop="@+id/email_Label"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="bottom">





        <TextView
            android:text="Number Of Requests Posted  : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="35dp"
            android:id="@+id/label_numberOfRequestesPosted"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:layout_marginLeft="20dp" />


        <TextView
            android:text="Number of requests Accepted  :"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/Lable_numberOfRequestsAccepted"
            android:fontFamily="serif"
            android:layout_below="@+id/label_numberOfRequestesPosted"
            android:layout_alignStart="@+id/label_numberOfRequestesPosted"
            android:layout_marginTop="21dp"
            />

        <TextView
            android:text="0"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/numberOfRequestsAccepted"
            android:background="#F0FAEE"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_alignBaseline="@+id/Lable_numberOfRequestsAccepted"
            android:layout_alignBottom="@+id/Lable_numberOfRequestsAccepted"
            android:layout_alignEnd="@+id/Lable_numberOfRequestsAccepted" />

        <TextView
            android:text="0"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:id="@+id/numberOfRequests"
            android:textAlignment="center"
            android:background="#F0FAEE"
            android:fontFamily="serif"
            android:textColor="#000"
            android:layout_alignBaseline="@+id/label_numberOfRequestesPosted"
            android:layout_alignBottom="@+id/label_numberOfRequestesPosted"
            android:layout_alignStart="@+id/numberOfRequestsAccepted"
            android:textStyle="normal|bold" />


    </RelativeLayout>


</FrameLayout>

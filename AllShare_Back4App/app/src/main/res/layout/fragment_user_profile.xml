<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.allshare_back4app.Fragments.UserProfile">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="User Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="53dp"
            android:id="@+id/userName_lable"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName_lable"
            android:layout_alignStart="@+id/userName_lable"
            android:layout_marginTop="32dp"
            android:id="@+id/email_Label"
            android:textColor="@android:color/black"/>

        <TextView
            android:text="Number Of Requests Posted "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_Label"
            android:layout_alignStart="@+id/email_Label"
            android:layout_marginTop="35dp"
            android:id="@+id/label_numberOfRequestesPosted"
            android:textColor="@android:color/black" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfRequests"
            android:layout_alignBaseline="@+id/label_numberOfRequestesPosted"
            android:layout_alignBottom="@+id/label_numberOfRequestesPosted"
            android:layout_toEndOf="@+id/label_numberOfRequestesPosted"
            android:layout_marginStart="78dp"
            android:textColor="@android:color/black"
            tools:textStyle="bold"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Number of requests Accepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_numberOfRequestesPosted"
            android:layout_alignStart="@+id/label_numberOfRequestesPosted"
            android:layout_marginTop="22dp"
            android:id="@+id/Lable_numberOfRequestsAccepted"
            android:textColor="@android:color/black" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Lable_numberOfRequestsAccepted"
            android:id="@+id/numberOfRequestsAccepted"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_alignStart="@+id/numberOfRequests" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/label_numberOfRequestesPosted"
            android:layout_alignStart="@+id/userName"
            android:id="@+id/emailId_textView"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:layout_alignBaseline="@+id/userName_lable"
            android:layout_alignBottom="@+id/userName_lable"
            android:layout_toStartOf="@+id/numberOfRequests"
            android:layout_marginEnd="27dp"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

</FrameLayout>
